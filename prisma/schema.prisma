generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id             Int     @id @default(autoincrement())
  email          String  @unique
  name           String?
  password       String
  profilePicture String?
  isAdmin        Boolean
  phone          String
  jobs           Job[]
}

model Job {
  id            Int       @id @default(autoincrement())
  clientName    String?
  clientEmail   String?
  clientPhone   String?
  userId        Int?
  description   String
  address       String
  scheduledDate DateTime?
  warrenty      Int?
  user          User?     @relation(fields: [userId], references: [id])
}
